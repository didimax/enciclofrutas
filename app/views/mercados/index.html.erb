<h1>Listing mercados</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Endereco</th>
    <th>Telefone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @mercados.each do |mercado| %>
  <tr>
    <td><%= mercado.nome %></td>
    <td><%= mercado.endereco %></td>
    <td><%= mercado.telefone %></td>
    <td><%= link_to 'Show', mercado %></td>
    <td><%= link_to 'Edit', edit_mercado_path(mercado) %></td>
    <td><%= link_to 'Excluir', mercado, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

